}

@Article{holcomb:dual.camera:2009,
  author       = {Holcomb, Mark R. and Woods, Marcella C. and Uzelac, Illja and Wikswo, J. P. and Gilligan, Jonathan M. and Sidorov, Venyamin Y.},
  title        = {The Potential of Dual Camera Systems for Multimodal Imaging of Cardiac Electrophysiology and Metabolism},
