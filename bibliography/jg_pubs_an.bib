@InProceedings{gilligan:flood.partsim:2015,
  author       = {Gilligan, Jonathan M. and Brady, Corey and Camp, Janey V. and Nay, John J. and Sengupta, Pratim},
  title        = {Participatory Simulations of Urban Flooding for Learning and Decision Support},
  booktitle    = {Proceedings of the 2015 {Winter} {Simulation} {Conference}},
