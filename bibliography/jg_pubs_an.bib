@Article{carrico:costly.myths:2009,
  author        = {Carrico, Amanda R. and Padgett, Paul and Vandenbergh, Michael P. and Gilligan, Jonathan and Wallston, Kenneth A.},
  title         = {Costly myths: an analysis of idling beliefs and behavior in personal motor vehicles},
  journaltitle  = {Energy Policy},
