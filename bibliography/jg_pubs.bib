  File                     = {full text:pdfs\\Benneyworth_2016_Drinking_Water.pdf:PDF},
  Groups                   = {Articles},
  Owner                    = {gilligjm},
  Peerreviewed             = {true},
  Pmid                     = {27277537},
  Shorttitle               = {Drinking water insecurity},
  Timestamp                = {2016.07.14}
}

@Inproceedings{burchfield:abm:2016,
  Title                    = {Dynamics of Individual and Collective Agricultural Adaptation to Water Scarcity},
  Author                   = {Burchfield, Emily K. and Gilligan, Jonathan M.},
  Booktitle                = {Proceedings of the 2016 Winter Simulation Conference},
  Date                     = {2016},
  Editor                   = {Roeder, T.M.K. and Frazier, P.I. and Szechtman, R. and Zhou, E. and Huschka, T. and Chick, S.E.},
