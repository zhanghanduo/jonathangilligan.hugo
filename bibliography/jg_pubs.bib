  Keywords                 = {Drought; Adaptive capacity; Multi-scale; Remote sensing; Mixed methods},
  Owner                    = {gilligjm},
  Peerreviewed             = {true},
  Publisher                = {Elsevier},
  Timestamp                = {2017.04.20}
}

