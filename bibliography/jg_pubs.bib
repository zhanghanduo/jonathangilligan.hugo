@Article{auerbach:flood.risk:2015,
  Title                    = {Flood risk of natural and embanked landscapes on the {G}anges-{B}rahmaputra tidal delta plain},
  Author                   = {Auerbach, Leslie W. and Goodbred, Jr., S. L. and Mondal, Dhiman R. and Wilson, Carol A. and Ahmed, Kazi R. and Roy, Kushal and Steckler, Michael S. and Small, Christopher and Gilligan, Jonathan M. and Ackerly, Brooke A.},
  Date                     = {2015},
