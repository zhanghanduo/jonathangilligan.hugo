@Article{gunda:drought.patterns:2016,
  Title                    = {Spatiotemporal Patterns of Agricultural Drought in {S}ri {L}anka: 1881--2010},
  Author                   = {Gunda, Thushara and Hornberger, George M. and Gilligan, Jonathan M.},
